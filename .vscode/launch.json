{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Pester tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": [
                "-Path ${cwd}\\tests"
            ],
            "cwd": "${cwd}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch (current file)",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "name": "PowerShell Attach to Host Process",
            "type": "PowerShell",
            "request": "attach"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Test PowerShell",
            "cwd": "${workspaceRoot}"
        }
    ]
}